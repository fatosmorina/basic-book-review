<h2><%= @book.title %></h2>
<h3><%= @book.author %></h3>
<p><%= @book.description %></p>

<%= link_to "Back", root_path %>


<% if user_signed_in? && current_user.id == @book.user_id %>
	<%= link_to "Edit", edit_book_path(@book) %>
	<%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Do you really want to delete this book?"} %>
<% end %>	